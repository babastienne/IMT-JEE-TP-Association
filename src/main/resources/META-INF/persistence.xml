<!-- JPA 2.0 -->
<persistence
        xmlns="http://java.sun.com/xml/ns/persistence"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:schemaLocation="http://java.sun.com/xml/ns/persistence http://java.sun.com/xml/ns/persistence/persistence_2_0.xsd"
        version="2.0">

    <!--
     For a MAVEN project put this file in "src/main/resources/META-INF"
     -->

    <persistence-unit name="td" transaction-type="RESOURCE_LOCAL">
        <provider>org.hibernate.ejb.HibernatePersistence</provider>
        <properties>

            <!-- JDBC configuration -->
            <property name="javax.persistence.jdbc.driver"   value="org.apache.derby.jdbc.ClientDriver"/>
            <property name="javax.persistence.jdbc.url"      value="jdbc:derby://localhost:1527/bookstore"/>
            <property name="javax.persistence.jdbc.user"     value="root"/>
            <property name="javax.persistence.jdbc.password" value="admin"/>

            <!-- Hibernate database dialect -->
            <property name="hibernate.dialect"                  value="org.hibernate.dialect.DerbyDialect"/>

            <!-- Hibernate configuration -->
            <property name="hibernate.hbm2ddl.auto"       value="none"/>
            <property name="hibernate.show_sql"           value="true"/>
        </properties>
    </persistence-unit>

    <persistence-unit name="association" transaction-type="RESOURCE_LOCAL">
        <properties>
            <property name="hibernate.hbm2ddl.import_files_sql_extractor" value="org.hibernate.tool.hbm2ddl.MultipleLinesSqlCommandExtractor" />
            <property name="javax.persistence.schema-generation.database.action" value="drop-and-create"/>
            <property name="hibernate.hbm2ddl.auto"       value="create-drop"/>
            <property name="javax.persistence.schema-generation.scripts.action" value="drop-and-create"/>
            <property name="hibernate.dialect"                  value="org.hibernate.dialect.DerbyDialect"/>
            <property name="javax.persistence.schema-generation.scripts.create-target" value="sampleCreate.ddl"/>
            <property name="javax.persistence.schema-generation.scripts.drop-target" value="sampleDrop.ddl"/>
            <!--<property name="javax.persistence.jdbc.driver" value="org.apache.derby.jdbc.EmbeddedDriver"/>-->
            <property name="javax.persistence.jdbc.driver"   value="org.apache.derby.jdbc.ClientDriver"/>
            <property name="javax.persistence.jdbc.url" value="jdbc:derby://localhost:1527/associationDB;create=true"/>
            <!--<property name="javax.persistence.sql-load-script-source" value="insert.sql"/>-->

        </properties>
    </persistence-unit>

</persistence>